<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="training.androidkotlin.bambatabiz.TelConnexionActivity"
    android:orientation="vertical"
    android:background="@drawable/gradient_primary">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numéro de téléphone"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/ic_phone_android_white_24dp"
        android:drawablePadding="10dp"
        android:inputType="phone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mot de passe"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
        android:drawablePadding="10dp"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:text="Se connecter"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/passe_oublié"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/passe_oublié"
            android:layout_marginTop="25dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:clickable="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_s'inscrire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S'inscrire"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20"
            android:clickable="true"/>

    </RelativeLayout>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_google_signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Incrivez- vous avec Google"
        android:layout_marginTop="30dp"/>




</LinearLayout>
