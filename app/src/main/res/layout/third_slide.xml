<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/slide3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slider3_title"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/img_slide3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/robe"
        android:layout_marginTop="200dp"/>


    <TextView
        android:id="@+id/slide1_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slider3_des"
        android:textColor="@color/inactive_color"
        android:layout_below="@+id/img_slide3"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

</RelativeLayout>